{
  "name": "DuckLake Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--platform=linux/amd64"
  ],
  "containerEnv": {
    "DUCKDB_PLATFORM": "linux_amd64",
    "VCPKG_TARGET_TRIPLET": "x64-linux",
    "GEN": "Ninja",
    "VCPKG_TOOLCHAIN_PATH": "/usr/local/vcpkg/scripts/buildsystems/vcpkg.cmake",
    "ENABLE_SQLITE_SCANNER": "ON",
    "ENABLE_POSTGRES_SCANNER": "ON",
    "BUILD_EXTENSION_TEST_DEPS": "full"
  },
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {
        "C_Cpp.default.compilerPath": "/usr/bin/clang++",
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.intelliSenseMode": "clang-x64",
        "cmake.configureOnOpen": false,
        "files.associations": {
          "*.cmake": "cmake",
          "CMakeLists.txt": "cmake"
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/itsmechlark/features/postgresql:1": {
      "version": "15"
    },
    "ghcr.io/msclock/features/vcpkg:2.0.0": {},
    "ghcr.io/devcontainers-extra/features/ninja-asdf:2": {},
    "ghcr.io/devcontainers-extra/features/ccache-asdf:2": {}
  },
  "postCreateCommand": "",
  "remoteUser": "vscode"
}